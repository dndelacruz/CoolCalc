<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dndapps.coolcalc.CalcActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="165dp"
        android:background="#34D5C6"
        android:id="@+id/constraintLayout">

        <TextView
            android:text="567"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultsTxt"
            android:textSize="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="24dp"
            android:textColor="@android:color/white" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/white"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="80dp"
            android:weightSum="4"
            android:id="@+id/linearLayout">

            <Button
                android:text="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/sevenBtn"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <Button
                android:text="8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/eightBtn"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <Button
                android:text="9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/nineBtn"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/divide"
                android:id="@+id/divideBtn"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/divide" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:weightSum="4"
            android:id="@+id/linearLayout2">

            <Button
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/fourBtn"
                android:layout_weight="1"
                android:textSize="25dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black" />

            <Button
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/fiveBtn"
                android:layout_weight="1"
                android:textSize="25dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black" />

            <Button
                android:text="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/sixBtn"
                android:layout_weight="1"
                android:textSize="25dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/multiply"
                android:id="@+id/multiplyBtn"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/multiply" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:weightSum="4"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="80dp"
            android:id="@+id/linearLayout3">

            <Button
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/oneBtn"
                android:layout_weight="1"
                android:textSize="25dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black" />

            <Button
                android:text="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/twoBtn"
                android:layout_weight="1"
                android:textSize="25dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black" />

            <Button
                android:text="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/threeBtn"
                android:layout_weight="1"
                android:textSize="25dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/subtract"
                android:id="@+id/subtractBtn"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/subtract" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:weightSum="4"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="80dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <Button
                    android:text="CLEAR"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:id="@+id/clearBtn"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:background="#4CC8BD"
                    android:textSize="25dp" />
            </LinearLayout>

            <Button
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/zeroBtn"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/add"
                android:id="@+id/addBtn"
                android:layout_weight="1"
                android:src="@drawable/add"
                android:background="@android:color/transparent" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/equal"
        android:id="@+id/calcBtn"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="110dp"
        android:background="@android:color/transparent"
        android:src="@drawable/equal" />
</android.support.constraint.ConstraintLayout>
